{
  "name": "campus",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "analyze": "cross-env ANALYZE='true' yarn run build",
    "build": "next build",
    "cms:dev": "netlify-cms-proxy-server",
    "debug": "cross-env NODE_OPTIONS='--inspect' next dev",
    "dev": "next dev",
    "export": "next export",
    "format": "prettier . -l --ignore-path .gitignore",
    "format:fix": "yarn run format --write",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "lint:fix": "yarn run lint --fix",
    "preexport": "rimraf out",
    "prepare": "simple-git-hooks",
    "script": "ts-node -r tsconfig-paths/register",
    "start": "next start",
    "test": "jest --passWithNoTests",
    "test:coverage": "yarn run test --coverage",
    "test:watch": "yarn run test --watch",
    "typecheck": "tsc --noEmit",
    "validate": "yarn run format && yarn run lint && yarn run typecheck && yarn test"
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  },
  "dependencies": {
    "algoliasearch": "^4.9.1",
    "netlify-cms-app": "^2.15.11",
    "next": "^10.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@next/bundle-analyzer": "^10.2.3",
    "@stefanprobst/commitlint-config": "^1.0.1",
    "@tailwindcss/typography": "^0.4.1",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "autoprefixer": "^10.2.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-config-next": "^10.2.3",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.1",
    "lint-staged": "^11.0.0",
    "netlify-cms-proxy-server": "^1.3.16",
    "next-transpile-modules": "^7.2.0",
    "postcss": "^8.3.0",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.4.1",
    "tailwindcss": "^2.1.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.2",
    "xdm": "^1.11.0"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not op_mini all"
  ],
  "commitlint": {
    "extends": "@stefanprobst/commitlint-config"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:jest/recommended",
      "plugin:jest/style",
      "next",
      "prettier"
    ],
    "rules": {
      "import/order": [
        "error",
        {
          "alphabetize": {
            "order": "asc"
          }
        }
      ],
      "react/prop-type": "off",
      "@typescript-eslint/consistent-type-imports": "error"
    },
    "overrides": [
      {
        "files": [
          "*.config.js"
        ],
        "rules": {
          "@typescript-eslint/no-var-requires": "off"
        }
      }
    ],
    "settings": {
      "import/resolver": {
        "typescript": {
          "extensions": [
            ".ts",
            ".tsx"
          ],
          "alwaysTryTypes": true
        }
      }
    }
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.@(css|json)": "prettier --write",
    "*.@(md|mdx)": "prettier --write"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {},
      "autoprefixer": {}
    }
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "**/*.@(md|mdx)"
        ],
        "options": {
          "singleQuote": false
        }
      }
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "yarn commitlint --edit",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn run validate"
  }
}
